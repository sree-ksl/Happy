<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Happy" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_hey</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Happy</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Happy</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Happy</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Happy</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Happy</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_hey</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_hey</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Happy</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.Happy.Overflow</item>
        <item name="android:listViewStyle">@style/Theme.Happy.LightPurpleBackground</item>

    </style>

    <style name="Theme.Happy.LightPurpleBackground">
        <item name="android:background">@color/light_purple_background</item>
        <item name="android:divider">@null</item>
    </style>


    <style name="Theme.Happy.Overflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="ActionBar.Solid.Happy" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_hey</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_hey</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_hey</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Happy</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Happy.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.Happy.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/background_purple</item>
    </style>

    <style name="ActionBar.Transparent.Happy" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_hey</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Happy</item>
    </style>

    <style name="PopupMenu.Happy" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hey</item>
    </style>

    <style name="DropDownListView.Happy" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_hey</item>
    </style>

    <style name="ActionBarTabStyle.Happy" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_hey</item>
    </style>

    <style name="DropDownNav.Happy" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_hey</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_hey</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_hey</item>
    </style>

    <style name="ProgressBar.Happy" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_hey</item>
    </style>

    <style name="ActionButton.CloseMode.Happy" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_hey</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Happy.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Happy</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Happy</item>
    </style>




    <style name="AuthBackground">
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="AuthBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:src">@drawable/background</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="AuthTitle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Hey!</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="AuthFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@+id/happyAppTitle</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AuthTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/light_purple_button</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/background_purple</item>
    </style>

    <style name="NotesFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_below">@+id/noButton</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>